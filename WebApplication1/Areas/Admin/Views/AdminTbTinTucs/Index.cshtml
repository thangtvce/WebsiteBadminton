
@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebApplication1.Models.TbTinTuc>
@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Trang Tin Tuc" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<span class="breadcrumb-item active">Danh sách khách hàng : page @CurrentPage</span>
<div class="card-body">

    <div class="table-responsive">
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th> ID</th>
                    <th> Nội dung tin </th>
                    <th> Trạng thái </th>
                    <th> # </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.PostId </td>
                            <td> @item.Title </td>
                            <td>
                                @if (item.Published == true)
                                {
                                    <div class="badge badge-success badge-dot m-r-10">
                                        <div>Published</div>
                                    </div>
                                }
                                else
                                {
                                    <div class="badge badge-danger badge-dot m-r-10">
                                        <div>Block</div>
                                    </div>
                                }
                            <td>
                            <td>

                                <a class="badge badge-success" asp-area="Admin" asp-controller="AdminTbTinTucs" asp-action="Edit" asp-route-id="@item.PostId">Edit</a> |
                                <a class="badge badge-warning" asp-action="Details" asp-route-id="@item.PostId">Details</a> |
                                <a class="badge badge-danger" asp-action="Delete" asp-route-id="@item.PostId">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>


    </div>
</div>
<div class="row justify-content-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="?page=" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>

            <li class="page-item">
                <a class="page-link" href="?page=">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="?page=">2</a>
            </li>
            <!-- Các trang còn lại -->

            <li class="page-item">
                <a class="page-link" href="?page=" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>