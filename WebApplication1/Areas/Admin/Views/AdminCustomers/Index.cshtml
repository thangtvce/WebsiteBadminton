@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebApplication1.Models.Customer>
@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách khách hàng" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<span class="breadcrumb-item active">Danh sách khách hàng : page @CurrentPage</span>
<div class="card-body">

    <div class="table-responsive">
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th> ID</th>
                    <th> Họ và Tên </th>
                    <th> Số Điện thoại </th>
                    <th> Email</th>
                    <th> Địa chỉ</th>
                    <th> Tỉnh thành</th>
                    <th> # </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.CustomerId </td>
                            <td> @item.FullName </td>
                            <td> @item.Phone </td>
                            <td> @item.Email </td>
                            <td> @item.Address </td>
                            <td></td>
                            <td>

                                <a class="badge badge-success" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a> |
                                <a class="badge badge-warning" asp-action="Details" asp-route-id="@item.CustomerId">Details</a> |
                                <a class="badge badge-danger" asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table> 
        

    </div>
</div>
<div class="row justify-content-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="?page=" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>

            <li class="page-item">
                <a class="page-link" href="?page=">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="?page=">2</a>
            </li>
            <!-- Các trang còn lại -->

            <li class="page-item">
                <a class="page-link" href="?page=" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>