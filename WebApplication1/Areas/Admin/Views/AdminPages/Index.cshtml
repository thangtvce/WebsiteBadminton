@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebApplication1.Models.Page>
@{
    ViewData["Title"] = "Danh sách PAGE";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<span class="breadcrumb-item active">Danh sách khách hàng : page @ViewBag.CurrentPage</span>
<div class="card-body">

    <div class="table-responsive">
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th> ID</th>
                    <th> Page Name </th>
                    <th> Trạng Thái </th>                   
                    <th> # </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.PageId </td>
                            <td> @item.PageName </td>
                            <td>
                                @if (item.Published == true){
                                <div class="badge badge-success badge-dot m-r-10">
                                        <div>Published</div>
                                    </div>
                                } 
                                else
                                {
                                    <div class="badge badge-danger badge-dot m-r-10">
                                        <div>Block</div>
                                    </div>
                                }
                            <td>

                                <a class="badge badge-success" asp-area="Admin" asp-controller="AdminPages" asp-action="Edit" asp-route-id="@item.PageId">Edit</a> |
                                <a class="badge badge-warning" asp-action="Details" asp-route-id="@item.PageId">Details</a> |
                                <a class="badge badge-danger" asp-action="Delete" asp-route-id="@item.PageId">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>


    </div>
</div>
<div class="row justify-content-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="?page=" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>

            <li class="page-item">
                <a class="page-link" href="?page=">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="?page=">2</a>
            </li>
            <!-- Các trang còn lại -->

            <li class="page-item">
                <a class="page-link" href="?page=" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
