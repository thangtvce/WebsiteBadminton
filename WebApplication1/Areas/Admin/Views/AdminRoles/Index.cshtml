@model IEnumerable<WebApplication1.Models.Roles>
@{
    ViewData["Title"] = "Quản lí quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-body">

    <div class="table-responsive">
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th> ID</th>
                    <th> Name </th>
                    <th> Description </th>
                    <th> # </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.RoleID </td>
                            <td> @item.RoleName </td>
                            <td> @item.Description </td>
                            <td>

                                <a class="badge badge-success" asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@item.RoleID">Edit</a> |
                                <a class="badge badge-warning" asp-action="Details" asp-route-id="@item.RoleID">Details</a> |
                                <a class="badge badge-danger" asp-action="Delete" asp-route-id="@item.RoleID">Delete</a>
                            </td>         
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


